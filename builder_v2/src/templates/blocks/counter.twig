{#
  Title: Counter
  Description: Basic Counter Section.
  Category: formatting
  Icon: backup
  Keywords: about
  Mode: edit
  Align: left
  PostTypes: page post
  SupportsAlign: left right
  SupportsMode: true
  SupportsMultiple: true
#}
<section class="firebase-counter section-spacing bg-white {{ block.className }}">
	{% if fields.upper_title and fields.title %}
	<div class="container mx-auto flex flex-col text-center pb-1 mb-8">
		<h3 class="font-header tracking-wider text-gray uppercase mb-2">{{ fields.upper_title }}</h3>
		<h2 class="font-header text-4xl lg:text-5xl mb-8">{{ fields.title}}</h2>
	</div>
	{% else %}
	{% if fields.upper_title %}
	<h3 class="font-header tracking-wider text-gray uppercase mb-2">{{ fields.upper_title }}</h3>
	{% endif %}
	{% if fields.title %}
	<h2 class="font-header text-4xl mb-8">{{ fields.title}}</h2>
	{% endif %}
	{% endif %}
	{% if fields.box %}
	<div class="container mx-auto flex mt-8">
		<div class="w-full flex flex-col md:flex-row flex-wrap justify-around">
			{% for item in fields.box %}
			<article class="text-center mx-8 bg-white mb-8 lg:mb-0" data-aos="fade-up" data-aos-offset="150"
				data-aos-delay="{{loop.index}}50" data-aos-duration="2*{{loop.index}}50" data-aos-once="true">
				{% if item.number %}
				<h3 class="counter inline-block text-4xl tracking-tight font-header text-primary mb-4"
					data-count='{{ item.number }}'>0</h3>
				{% endif %}
				{% if item.title %}
				<h4 class="text-2xl text-gray font-header pb-2 mb-2">{{item.title}}</h4>
				{% endif %}
			</article>
			{% endfor %}
		</div>
	</div>
	{% endif %}
</section>
