{#
  Title: Testimonials Slider
  Description: Testimonials block
  Category: Firebase-blocks
  Icon: list-view
  Keywords: testimonials
  Mode: edit
  Align: left
  PostTypes: page post
  SupportsAlign: left right
  SupportsMode: true
  SupportsMultiple: true
#}


<section class="firebase-testimonials section-spacing bg-white {{ block.className }}">
	<div class="container mx-auto z-10">
		<div class="flex flex-col">
			{% if fields.upper_title and fields.title %}
			<div class="container mx-auto flex flex-col text-center pb-1 mb-8">
				<h3 class="font-header tracking-wider text-gray uppercase mb-2">{{ fields.upper_title }}</h3>
				<h2 class="font-header text-4xl lg:text-5xl mb-8">{{ fields.title}}</h2>
			</div>
			{% else %}
			{% if fields.upper_title %}
			<h3 class="font-header tracking-wider text-gray uppercase mb-2">{{ fields.upper_title }}</h3>
			{% endif %}
			{% if fields.title %}
			<h2 class="font-header text-4xl mb-8">{{ fields.title}}</h2>
			{% endif %}
			{% endif %}
			<div class="testimonials">
				{{fn('do_shortcode', fields.testimonials|striptags)}}
			</div>
		</div>
	</div>
</section>
