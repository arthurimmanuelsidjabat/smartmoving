{#
  Title: Icon List
  Description: Icon List Section.
  Category: formatting
  Icon: editor-ul
  Keywords: about
  Mode: edit
  Align: left
  PostTypes: page post
  SupportsAlign: left right
  SupportsMode: true
  SupportsMultiple: true
#}

<section class="firebase-iconlist section-spacing bg-white {{ block.className }}">
	{% if fields.upper_title and fields.title %}
	<div class="container mx-auto flex flex-col text-center pb-1 mb-8">
		<h3 class="font-header tracking-wider text-gray uppercase mb-2">{{ fields.upper_title }}</h3>
		<h2 class="font-header text-4xl lg:text-5xl mb-8">{{ fields.title}}</h2>
	</div>
	{% else %}
	{% if fields.upper_title %}
	<h3 class="font-header tracking-wider text-gray uppercase mb-2">{{ fields.upper_title }}</h3>
	{% endif %}
	{% if fields.title %}
	<h2 class="font-header text-4xl mb-8">{{ fields.title}}</h2>
	{% endif %}
	{% endif %}
	{% if fields.list %}
	<div class="container mx-auto flex mt-8">
		<div class="w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
			{% for item in fields.list %}
			<article
				class="flex flex-row justify-center lg:justify-start items-center text-center lg:text-left bg-white mb-4 lg:mb-8"
				data-aos="fade-up" data-aos-offset="-350" data-aos-delay="{{loop.index}}50"
				data-aos-duration="2*{{loop.index}}50" data-aos-once="true">
				{% if item.icon.url %}
				<div
					class="w-16 h-16 flex border border-primary bg-primary text-white rounded-full mt-2 mb-4 mr-4 lg:mb-0">
					<img src="{{ item.icon.url }}" title="{{ item.icon.title}}" alt="{{ item.icon.alt}}"
						class="injectable w-16 h-16 p-4 fill-secondary mx-auto mb-12"></div>
				{% endif %}
				{% if item.button %}
				<a class="text-2xl font-header hover:text-primary"
					href="{{ item.button.link }}">{{ item.button.title }}</a>
				{% else %}
				{% if item.title %}
				<h3 class="text-2xl font-header">{{item.title}}
				</h3>
				{% endif %}
				{% endif %}
			</article>
			{% endfor %}
		</div>
	</div>
	{% endif %}
</section>
