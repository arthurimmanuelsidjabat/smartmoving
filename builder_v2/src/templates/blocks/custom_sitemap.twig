{#
  Title: Custom Sitemap
  Description: Custom Sitemap
  Category: formatting
  Icon: editor-alignleft
  Keywords: about
  Mode: edit
  Align: left
  PostTypes: page post
  SupportsAlign: left right
  SupportsMode: true
  SupportsMultiple: true
#}

<section class="firebase-custom-sitemap section-spacing {{ block.className }}">
	<div class="container mx-auto text-left">
		{% if fields.icon %}
			<img class='injectable font-4xl fill-primary w-12 h-12 mx-auto mb-8' alt="{{ fields.icon.alt }}" title="{{ fields.icon.title }}" src="{{ fields.icon.url }}" title="{{ fields.icon.title }}">
			<span class="sr-only">{{fields.icon.title}}</span>
		{% endif %}
		{% if fields.title %}
			<h2 class="font-header text-4xl lg:text-5xl mb-8">
				{{fields.title}}</h2>
		{% endif %}
		<div class="content-wrap mb-8 {% if fields.two_columns_layout %}w-full md:grid md:grid-cols-2 gap-6 text-left {% else %}flex flex-col mx-auto w-full lg:w-10/12{% endif %}">
		{% if fields.shortcode %}
				{{fn('do_shortcode', fields.shortcode|striptags)}}
				{% else %}
				{{fn('do_shortcode', '[seopress_html_sitemap]')}}
			{% endif %}
			
			</div>
		
	</div>
</section>
